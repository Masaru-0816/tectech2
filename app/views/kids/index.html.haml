.wrapper
  = render 'shared/side_bar'
  .main
    .main_header
      .main_header_kid
        %h お子様のお名前
        %p 未選択
      .main_header_user
        %h あなたのお名前
        %p #{current_user.name}
      .main_header_menu
        = link_to edit_user_path(current_user), class:"btn-edit" do
          %i.fas.fa-pen 
        = link_to destroy_user_session_path, class:"btn" do
          %i.fas.fa-sign-out-alt
    .main_kids
      .main_kids_select
        お子さんを選択して下さい🎵
      - current_user.kids.each do |kid|
        .main_kids_selectlist
          = link_to root_path do
            .main_kids_selectlist_image
              = image_tag kid.image, width:300
            .main_kids_selectlist_name
              -if kid.sex == 0
                %p #{kid.name}くん
              -else
                %p #{kid.name}ちゃん
            .main_kids_selectlist_grade
              %p #{kid.grade}組