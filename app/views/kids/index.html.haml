.wrapper
  = render 'shared/side_bar'
  .main
    .main_header
      .main_header_kid
        %h お子様のお名前
        %p 未選択
      .main_header_user
        %h あなたのお名前
        %p #{current_user.name}さん
      .main_header_menu
        = link_to root_path, class:"btn-edit" do
          %i.fas.fa-pen 
        = link_to root_path, class:"btn-logout" do
          %i.fas.fa-sign-out-alt
    .main_kids
      .main_kids_select
        お子さんを選択して下さい🎵
      .main_kids_selectlist
        -current_user.kids.each do |kid|
          .kid
            = link_to root_path do
              .kid_picture
                = kid.picture
              .kid_name
                = kid.name
              .kid_class
                = kid.class