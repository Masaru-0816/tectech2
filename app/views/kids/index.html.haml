.wrapper
  .side_bar
    .side_bar_notice
      %i.far.fa-newspaper
      %p 
        = t ".お知らせ"

    .side_bar_diary
      %i.fas.fa-pencil-alt
      %p 
        = t ".日誌"

    .side_bar_message
      %i.far.fa-comments
      %p 
        = t ".メッセージ"

    .side_bar_album
      %i.fas.fa-camera-retro
      %p 
        = t ".写真"

    .side_bar_contact
      %i.fas.fa-phone
      %p 
        = t ".お問い合わせ"
  .main
    .main_header
      .main_header_kid
        %h 
          = t ".お子様のお名前"
        %p 
          = t ".未選択"
      .main_header_user
        %h 
          = t ".あなたのお名前"
        %p #{current_user.name}さん
      .main_header_menu
        = link_to edit_user_path(current_user), class:"btn-edit" do
          %i.fas.fa-pen 
        = link_to destroy_user_session_path, class:"btn" do
          %i.fas.fa-sign-out-alt
    .main_kids
      .main_kids_select
        = t ".お子さんを選択して下さい🎵"
      - current_user.kids.each do |kid|
        .main_kids_selectlist
          = link_to kid_notices_path(kid) do
            .main_kids_selectlist_image
              = image_tag kid.image.url, width:300
            .main_kids_selectlist_name
              -if kid.sex == 0
                %p #{kid.name}くん
              -else
                %p #{kid.name}ちゃん
            .main_kids_selectlist_grade
              %p #{kid.group.name}組
