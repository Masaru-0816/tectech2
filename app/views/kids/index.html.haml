.wrapper
  = render 'shared/side_bar'
  .main
    .main_header
      .main_header_kid
        %h お子様のお名前
        %p 未選択
      .main_header_user
        %h あなたのお名前
        %p #{current_user.name}さん
      .main_header_menu
        = link_to root_path, class:"btn-edit" do
          %i.fas.fa-pen 
        = link_to root_path, class:"btn-logout" do
          %i.fas.fa-sign-out-alt
    .main_kids
      .main_kids_select
        お子さんを選択して下さい🎵
      .main_kids_selectlist
        - current_user.kids.each do |kid|
          .kid_pic

          .main_kids_selectlist_pic
          = image_tag href='kii.jpg', width: '300px', class: 'kid_pic'
        .main_kids_selectlist_name
          鈴木きい ちゃん
        .main_kids_selectlist_class
          たんぽぽ組

- current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group_name
            = group.name
          .group_message
            = group.show_last_message