.wrapper_notices
  = render 'side_bar'
  .main
    .main_header
      .main_header_kid
        %h お子様のお名前
        -if @kid.sex == 0
          %p #{@kid.name}くん
        -else
          %p #{@kid.name}ちゃん
        %p #{@kid.group.name}組
      .main_header_user
        %h あなたのお名前
        %p #{current_user.name}
      .main_header_menu
        = link_to edit_user_path(current_user), class:"btn-edit" do
          %i.fas.fa-pen 
        = link_to kids_path, class:"btn" do
          %i.fas.fa-undo-alt
    .main_notice
      .main_notice_group
        #{@kid.group.name}組のご両親へのお知らせ🎵
      .main_notice_lists
        - @kid.group.notices.each do |notice|
          .main_notice_list
            .notice_title
              = notice.title
            .notice_date
              = notice.updated_at.strftime("%Y-%m-%d %H:%M")
            -if notice.content.present?
              .notice_content
                = notice.content
              .notice_image
                = notice.image