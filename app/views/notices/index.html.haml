.wrapper_notices
  .side_bar
    .side_bar_notice
      = link_to kid_notices_path(@kid), class:"btn-information" do
        %i.far.fa-newspaper
        %p お知らせ

    .side_bar_diary
      = link_to kid_diaries_path(@kid), class:"btn-diary" do
        %i.fas.fa-pencil-alt
        %p 日誌

    .side_bar_message
      = link_to kid_messages_path(@kid), class:"btn-message" do
        %i.far.fa-comments
        %p メッセージ

    .side_bar_album
      = link_to kid_albums_path(@kid), class:"btn-picture" do
        %i.fas.fa-camera-retro
        %p 写真

    .side_bar_contact
      = link_to root_path, class:"btn-contact" do
        %i.fas.fa-phone
        %p お問い合わせ

  .main
    .main_header
      .main_header_kid
        %h お子様のお名前
        -if @kid.sex == 0
          %p #{@kid.name}くん
        -else
          %p #{@kid.name}ちゃん
        %p #{@kid.group.name}組
      .main_header_user
        %h あなたのお名前
        %p #{current_user.name}
      .main_header_menu
        = link_to edit_user_path(current_user), class:"btn-edit" do
          %i.fas.fa-pen 
        = link_to kids_path, class:"btn" do
          %i.fas.fa-undo-alt
          
    .main_notice
      .main_notice_group
        #{@kid.group.name}組のご両親へのお知らせ🎵
      .main_notice_lists
        - @kid.group.notices.each do |notice|
          .main_notice_list
            .notice_title
              = notice.title
            .notice_date
              = notice.updated_at.strftime("%Y-%m-%d %H:%M")
            -if notice.content.present?
              .notice_content
                = notice.content
              .notice_image
                = notice.image